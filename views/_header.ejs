<link rel="stylesheet" href="/css/header.css">
<header>
    <p>
        SocialSphere
    </p>


    <ul>
        <% if (locals.user){ %>

          <li>
              <a href="/users/profile">

                  <%= locals.user.name %>
              </a>
          </li>
          <li>
            <a href="/users/sign-out">Sign Out</a>
          </li>
        <% } else{ %>
            <li>
                <a href="/users/sign-in">Sign in</a>
              </li>
              <li>
                <a href="/users/sign-up">Sign up</a>
              </li>
        <% } %>
    </ul>
</header>