<h1>Wellcome! to <%= title%></h1>

<section id="new-post">
  <h1>posts</h1>
  <% if (locals.user){ %>
  <form action="/posts/create" method="POST">
    <textarea
      name="content"
      cols="30"
      rows="10"
      placeholder="Type Here..."
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <% } %>
  <div>
    <ul>
      <% for (post of posts){ %>
      <li>
        <p><%= post.content %></p>
        <small><%= post.user.name %></small>
      </li>

      <% } %>
    </ul>
  </div>
</section>
