<link rel="stylesheet" href="/css/users_profile.css" />
<h1>SocialSphere / <%= title %></h1>

<% if(locals.user && locals.user.email == profile_user.email){ %>
<form action="/users/update/<%=locals.user._id%>" method="POST">
  <input
    type="text"
    name="user_name"
    value="<%= profile_user.name %>"
    required
  />
  <input
    type="email"
    name="user_email"
    value="<%= profile_user.email%>"
    required
  />
  <input type="submit" value="update" />
</form>
<% }else{ %>
<p><%= profile_user.name %></p>
<p><%= profile_user.email %></p>
<%}%>
